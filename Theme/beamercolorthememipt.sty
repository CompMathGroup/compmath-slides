\setbeamercolor{section in toc}{fg=black,bg=white}
\setbeamercolor{alerted text}{fg=red!70!black}

\setbeamercolor*{palette primary}{fg=mipt!60!black,bg=miptgray}
\setbeamercolor*{palette secondary}{fg=mipt!70!black,bg=miptgray!40!white}
\setbeamercolor*{palette tertiary}{bg=mipt!80!black,fg=miptgray!20!white}
\setbeamercolor*{palette quaternary}{fg=mipt,bg=miptgray!10!white}

\setbeamercolor*{sidebar}{fg=mipt,bg=miptgray!15!white}

\setbeamercolor*{palette sidebar primary}{fg=mipt!10!black}
\setbeamercolor*{palette sidebar secondary}{fg=white}
\setbeamercolor*{palette sidebar tertiary}{fg=mipt!50!black}
\setbeamercolor*{palette sidebar quaternary}{fg=gray!10!white}

\setbeamercolor{titlelike}{parent=palette primary,fg=mipt}
\setbeamercolor{frametitle}{bg=miptgray!10!white}
\setbeamercolor{frametitle right}{bg=miptgray!60!white}

\setbeamercolor*{block title}{fg=mipt!60!black,bg=miptgray}
\setbeamercolor*{block  body}{fg=black,bg=miptgray!40!white}

\setbeamercolor*{block title alerted}{fg=red!20!yellow,bg=miptgray!90!red}
\setbeamercolor*{block  body alerted}{fg=black,bg=miptgray!20!white!80!red}

\setbeamercolor*{block title example}{fg=green!20!black,bg=miptgray!90!green}
\setbeamercolor*{block  body example}{fg=black,bg=miptgray!20!white!80!green}


\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

